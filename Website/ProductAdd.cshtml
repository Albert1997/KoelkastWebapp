                Afbeelding = map + Request.Form["Afbeelding"];
            }

        if(Validation.IsValid()){

            
            var insertCommand = "INSERT INTO Ean (EanId, Productnaam, Afbeelding) VALUES(@0, @1, @2)";
            

            db.Execute(insertCommand, Ean, Product, Afbeelding);
            Response.Redirect("~/Koelkast");
        }
    }
}


<h1>Voeg een product toe</h1>
    @Html.ValidationSummary()
  <form method="post">
    <fieldset>
      <legend>Product</legend>

      <p><label for="Ean">Ean:</label>
         <input class="Forms" type="text" name="Ean" value="@Ean" /></p>
        
      <p><label for="Product">Product:</label>
